\usepackage{minted}

\newcommand{\codefile}[2] {
\IfFileExists{#1.#2}{\inputminted{#2}{#1.#2}}{\color{red}{File not found: #1.#2}}
}

\newcommand{\sqlfile}[1] {
\begin{quote}
    \sqlfileunquote{#1}
\end{quote}
}

\newcommand{\sqlfileunquote}[1] {
\codefile{#1}{sql}
}

\newcommand{\javafile}[1] {
\begin{quote}
    \javafileunquote{#1}
\end{quote}
}

\newcommand{\javafileunquote}[1] {
\codefile{#1}{java}
}

\newcommand{\code}[1] {\textit{\texttt{#1}}}

\newcommand{\secExercise}[1] {\section{Exercise #1}}

\newcommand{\q}[1] {\textbf{#1.} }

\newcommand{\answer}[1] {
\begin{quote}
    #1
\end{quote}
}
