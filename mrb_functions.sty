\ProvidesPackage{mrb_functions}

\usepackage{minted}

\newcommand{\codefileunquote}[2] {
\IfFileExists{#1.#2}{\inputminted{#2}{#1.#2}}{\color{red}{File not found: #1.#2}}
}

\newcommand{\codefile}[2] {
\begin{quote}
    \codefileunquote{#1}{#2}
\end{quote}
}

\newcommand{\code}[1] {{\texttt{#1}}}

\newcommand{\secExercise}[1] {\section{Exercise #1}}
\newcommand{\subsecExercise}[1] {\subsection{Exercise #1}}

\newcommand{\q}[1] {\textbf{#1.} }

\newcommand{\answer}[1] {
\begin{quote}
    #1
\end{quote}
}
